<div class="my-5 xl:mx-auto w-full max-w-screen-xl">
    <h2 class="text-lg xl:text-2xl text-primary font-semibold my-5 pl-4 xl:pl-0">Our Menu</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 xl:grid-cols-6 gap-1 xl:gap-3 px-1 xl:p-0">
        <% menus.forEach(menu => { %>
            <a href="/menu/<%= menu._id %>">
                <div class="border-2 border-transparent rounded-lg bg-white shadow hover:border-primary transition duration-300">
                    <img src="<%= menu.image %>" alt="<%= menu.name %>" class="w-full h-48 object-cover rounded-t-lg mb-2">
                    <h3 class="text-base text-secondary font-semibold mb-2 px-2"><%= menu.name %></h3>
                    <p class="text-sm text-secondary mb-2 px-2"><%= menu.description %></p>
                    <p class="text-lg text-primary font-bold mb-3 px-2">Rp<%= (menu.price).toLocaleString('id-ID') %></p>
                </div>
            </a>
        <% }) %>
    </div>
</div>
